<% provide(:title, 'Home') %>
<% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <ul class="categories">
	<% @categories.each do |categorie| %>
          <li><b><%= categorie.categoryname %></b></li>

  <% categorie.subcategories.each do |subcat| %>
    <li>
      <div style="padding-left:100px;float: left;"><%= subcat.subcategoryname %></div>
    </li>
  <% end %>
 
        <% end %>
      </ul>
    </section>
  </aside>
</div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome</h1>

    <%= link_to "Sign up!", signup_path, class: "btn btn-small btn-default" %>
  </div>

<% end %>


