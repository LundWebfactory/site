<% if @category.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@category.errors.count, "error") %>.
    </div>
    <ul>
    <% @category.errors.full_messages(1).each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
